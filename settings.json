{
  "explorer.confirmDelete": false,
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "workbench.editor.enablePreview": true,
  "workbench.colorTheme": "Make Apps Theme",
  "workbench.iconTheme": "material-icon-theme",

  // git
  "git.autofetch": true,
  // eslint
  "eslint.validate": [
    "vue",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // java
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"c:\\Users\\gkgk3\\.vscode\\extensions\\gabrielbb.vscode-lombok-1.0.1\\server\\lombok.jar\"",
  "java.project.importOnFirstTimeStartup": "automatic",
  "boot-java.support-spring-xml-config.on": true,
  "boot-java.scan-java-test-sources.on": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  }
}

